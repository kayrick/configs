[color]
    diff = auto
    status = auto
    branch = auto
[alias]
    st = status
    stu = status -uno
    cm = commit -v
    root = !pwd
    flog = log --name-status
    treelog =  log --oneline --decorate --all --graph
    d = difftool
[core]
    excludesfile = ~/gitignore
[push]
    default = current
[apply]
    whitespace = warn
[diff]
    tool = vimdiff
[difftool]
    prompt = false
[pull]
    rebase = true
[include]
    path = ~/.gitconfig.local
[branch]
    autosetuprebase = always
[sendemail]
    smtpserver = /usr/bin/msmtp
